<Window x:Class="Secret_Decoder.TextOutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Secret_Decoder"
        mc:Ignorable="d"
        Title="Not A Decoded Message" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Text Boxes -->
        <TextBox x:Name="TxtOutputBox" HorizontalAlignment="Left" Height="127" Margin="10,10,0,0" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" Text="Text Output Here" VerticalAlignment="Top" Width="375"/>

        <!-- Buttons -->
        <Button Name="BtnOk" Content="OK" HorizontalAlignment="Left" Margin="158,142,0,0" VerticalAlignment="Top" Width="75" Click="BtnOk_Click"/>


    </Grid>
</Window>
